<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popup_boarder">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.51"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LabelTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Times" />

                <EditText
                    android:id="@+id/numOfTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.51"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/startLabel"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="Hold Time"
                    android:layout_weight="0.92" />

                <EditText
                    android:id="@+id/holdHour"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="2"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/holdMinute"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="2"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/holdSecond"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:maxLength="2"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/endLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release Time" />

                <EditText
                    android:id="@+id/restHour"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="2"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/restMinute"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="2"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/restSecond"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:maxLength="2"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />

        </LinearLayout>

</RelativeLayout>